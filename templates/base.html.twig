<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <style>
                .menu {
                    display: flex;
                    justify-content: space-evenly;
                    width: 100%;
                }
                .menu_item_auth {
                    margin-left: auto;
                }
            </style>
        {% endblock %}
    </head>
    <body>
        {% block menu %}
            <div class="menu">
                {% block menu_home %}
                    <div class="menu_item">
                        <a href="{{ path('main') }}">Main page</a>
                    </div>
                {% endblock %}
                <div class="menu_item menu_item_auth">
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        Hello, {{ app.user.username }}!
                        (<a href="{{ logout_path() }}">Log out</a>)
                    {% else %}
                        <a href="/signup">Sign up</a>
                        or
                        <a href="{{ path('login') }}">Log in</a>
                    {% endif %}
                </div>
            </div>
        {% endblock %}
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
