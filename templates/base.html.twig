<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('build/app.css') }}">
        {% endblock %}
    </head>
    <body>
        {% block body %}
            <div class="main">
                {% block menu %}
                    <div class="menu">
                        {% block menu_home %}
                            <div class="menu_item">
                                <a href="{{ path('main') }}">Main page</a>
                            </div>
                        {% endblock %}
                        {% block menu_auth %}
                        <div class="menu_item menu_item_auth">
                            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                Hello, {{ app.user.username }}!
                                (<a href="{{ logout_path() }}">Log out</a>)
                            {% else %}
                                <a href="/signup">Sign up</a>
                                or
                                <a href="{{ path('login') }}">Log in</a>
                            {% endif %}
                        </div>
                        {% endblock %}
                    </div>
                {% endblock %}
                {% block main %}
                {% endblock %}
            </div>
        {% endblock %}
        {% block javascripts %}
            <script src="{{ asset('build/app.js') }}"></script>
        {% endblock %}
    </body>
</html>
