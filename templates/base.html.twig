<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('build/app.css') }}">
        {% endblock %}
    </head>
    <body>
        {% block body %}
            {% block menu %}
                <div class="menu">
                    {% block menu_home %}
                        <div class="menu__item">
                            <a href="{{ path('main') }}">Main page</a>
                        </div>
                    {% endblock %}
                    {% block menu_auth %}
                        <div class="menu__item menu__item_auth">
                            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                Hello, {{ app.user.username }}!
                                (<a href="{{ logout_path() }}">Log out</a>)
                            {% else %}
                                <a href="/signup">Sign up</a>
                                or
                                <a href="{{ path('login') }}">Log in</a>
                            {% endif %}
                        </div>
                    {% endblock %}
                </div>
                <div class="menu-hr"></div>
            {% endblock %}
            <div class="content">
                {% for message in app.flashes('info') %}
                    <div class="flash-info">
                        {{ message }}
                    </div>
                {% endfor %}
                {% block content %}
                {% endblock %}
            </div>
        {% endblock %}
        {% block javascripts %}
            {# https://symfony.com/blog/encore-0-21-0-webpack-4-support-copy-files-support-webpackencorebundle#new-runtime-js-file #}
            <script src="{{ asset('build/runtime.js') }}"></script>

            <script src="{{ asset('build/app.js') }}"></script>
        {% endblock %}
    </body>
</html>
