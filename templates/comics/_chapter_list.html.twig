{#
    chapters
#}
<ul class="chapter-list">
    {% for chapter in chapters %}
        <li>
            <div class="chapter-list__item">
                <div class="chapter-list__name">
                    <a href="{{ path('read', { folder: chapter.folder }) }}">
                        {{ chapter.displayName ?? chapter.folder }}
                    </a>
                </div>
                <div>
                    {{ chapter.createDate.format('Y-m-d H:i:s') }}
                </div>
                <div>
                    <a href="{{ path('edit', { folder: chapter.folder }) }}">
                        Edit
                    </a>
                </div>
            </div>
        </li>
    {% endfor %}
</ul>
