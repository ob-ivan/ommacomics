{#
    chapters
#}
<ul class="chapter_list">
    {% for chapter in chapters %}
        <li>
            <div class="chapter_list_item">
                <div>
                    <a href="{{ path('read', { folder: chapter.folder }) }}">
                        {{ chapter.folder }}
                    </a>
                </div>
                <div>
                    {{ chapter.createDate.format('Y-m-d H:i:s') }}
                </div>
            </div>
        </li>
    {% endfor %}
</ul>
