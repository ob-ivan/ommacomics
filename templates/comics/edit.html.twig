{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .flash-info {
            border: 1px solid red;
            background: yellow;
            padding: 10px;
            margin-bottom: 10px;
        }
    </style>
{% endblock %}

{% block main %}
    <h1>Edit chapter</h1>
    {% for message in app.flashes('info') %}
        <div class="flash-info">
            {{ message }}
        </div>
    {% endfor %}
    {{ form_start(form) }}
    {{ form_widget(form) }}
    {{ form_end(form) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        let deleteButton = document.getElementById('edit_delete');
        if (deleteButton) {
            deleteButton.addEventListener(
                'click',
                e => window.confirm('Are you sure you want to delete this chapter?') ||
                    e.preventDefault()
            );
        }
    </script>
{% endblock %}
